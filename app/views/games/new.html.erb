<h1>New game</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p>
 -->
<ul>
  <% @letters.each do |category| %>
    <li class="letter"><%= category.capitalize %></li>
  <% end %>
</ul>

<br>

<form action="/games" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word_answer" placeholder="What is your longuest world?">
  <input type="submit">
</form>
